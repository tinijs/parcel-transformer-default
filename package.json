{
  "name": "@tinijs/parcel-transformer-default",
  "version": "0.0.2",
  "description": "A ParcelJS transformer for default TiniJS apps.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "source": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "engines": {
    "node": ">= 12.0.0",
    "parcel": "^2.8.2"
  },
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile",
    "deploy": "npm run build && npm publish",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "keywords": [
    "node",
    "module",
    "parceljs",
    "tinijs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tinijs/parcel-transformer-default.git"
  },
  "bugs": {
    "url": "https://github.com/tinijs/parcel-transformer-default/issues"
  },
  "dependencies": {
    "@parcel/plugin": "^2.8.2",
    "@parcel/source-map": "^2.1.1",
    "@parcel/ts-utils": "^2.8.2",
    "@parcel/types": "^2.8.2",
    "fs-extra": "^11.1.0",
    "sass": "^1.57.1"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^14.11.8",
    "gts": "^4.0.0",
    "typescript": "~4.9.4"
  }
}
